@model deneme.Models.User

@{
    ViewBag.Title = "Delete";
}

<h2>Kişi Sil</h2>

<h3>Silmek istediğinize emin misiniz?</h3>
<div>
    
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Ad")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.name)
        </dd>

        <dt>
            @Html.DisplayName("Soyad")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.surname)
        </dd>

        <dt>
            @Html.DisplayName("Yaş")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.age)
        </dd>

        <dt>
            @Html.DisplayName("İşe Başlama Tarihi")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.jdate)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Sil" class="btn btn-default" /> | @Html.ActionLink("Listeyi Görüntüle", "Index")
        </div>
    }
</div>
