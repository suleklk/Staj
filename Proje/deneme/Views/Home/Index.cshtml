@model IEnumerable<deneme.Models.User>

@{
    ViewBag.Title = "Index";
}

<h2>Kişi Listesi</h2>

<p>
    @Html.ActionLink("Yeni Kişi Ekle", "Create")
</p>
<head></head>
<body>
    <table class="table">
        <tr>
            <th>No</th>
            <th>Ad</th>
            <th>Soyad</th>
            <th>Yaş</th>
            <th>İşe Başlama Tarihi</th>
            <th></th>
        </tr>
        @{ int rowNo = 0; }

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @(rowNo += 1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.surname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.age)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.jdate)
                </td>
                <td>
                    @Html.ActionLink("Düzenle", "Edit", new { id = item.id }) |
                    @Html.ActionLink("Sil", "Delete", new { id = item.id })
                </td>
            </tr>
        }
    </table>
</body>